{
  "number_of_replicas":0,
  "number_of_shards": 1,
  "analysis": {
    "analyzer": {
      "phonetic_search": {
        "tokenizer": "text_only_tokenizer",
        "type": "custom",
        "filter": [
          "french_elision",
          "word_delimiter_helper",
          "lowercase",
          "unique",
          "french-phonetic"
        ]
      },
      "phonetic_index": {
        "tokenizer": "text_only_tokenizer",
        "type": "custom",
        "filter": [
          "french_elision",
          "word_delimiter_helper",
          "lowercase",
          "french-phonetic"
        ]
      }
    },
    "tokenizer": {
      "text_only_tokenizer": {
        "type": "pattern",
        "pattern": "[^a-z_A-Z\\u00C0-\\u00FF]"
      }
    },
    "filter": {
      "french_elision": {
        "type": "elision",
        "articles_case": true,
        "articles": [
          "l",
          "m",
          "t",
          "qu",
          "n",
          "s",
          "j",
          "d",
          "c",
          "jusqu",
          "quoiqu",
          "lorsqu",
          "puisqu"
        ]
      },
      "french-phonetic": {
        "encoder": "french_phonetic",
        "type": "french_phonetic"
      },
      "word_delimiter_helper": {
        "catenate_all": false,
        "stem_english_possessive": false,
        "split_on_case_change": false,
        "type": "word_delimiter"
      }
    }
  }

}